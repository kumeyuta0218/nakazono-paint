{
  "name": "nakazono-paint",
  "private": true,
  "scripts": {
    "start:server": "browser-sync start -s dist -w src/*.html src/assets/css/*.css src/assets/js/*.js",
    "compile:ejs": "ejs-cli -b src/templates/ \"/**/index.ejs\" -o dist/",
    "watch:ejs": "chokidar \"src/templates/\" -c \"npm run compile:ejs\" --initial",
    "compile:scss": "sass src/scss/style.scss:dist/assets/css/style.css --style=compressed --source-map-urls=relative",
    "compile:postcss": "postcss dist/assets/css/style.css -u autoprefixer css-mqpacker -o dist/assets/css/style.css",
    "compile:scss2postcss": "run-s compile:scss compile:postcss",
    "watch:scss2postcss": "chokidar \"src/scss/\" --command \"npm run compile:scss2postcss\" --initial",
    "compile:ts": "webpack --mode production",
    "watch:ts": "webpack  --mode production --watch",
    "delete:dist": "rimraf dist",
    "copy:images": "cpx \"src/img/**/*\" dist/assets/img/",
    "copy:public": "cpx \"public/*\" dist/",
    "install:husky": "husky install",
    "prewatch:all": "run-s delete:dist copy:images copy:public install:husky",
    "watch:all": "run-p watch:ejs watch:scss2postcss watch:ts start:server",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "format:ts": "prettier --cache --write src/ts/*.ts",
    "lint:ts": "eslint --fix src/ts/*.ts",
    "format:all": "run-p format:scss format:ts lint:ts",
    "test": "jest",
    "min:css": "cleancss -o dist/assets/css/style.css dist/assets/css/style.css",
    "delete:map": "rimraf dist/**/*.map",
    "prepare:all": "run-p min:css delete:map"
  },
  "volta": {
    "node": "16.16.0",
    "npm": "8.11.0"
  },
  "browserslist": [
    "> 0.2%, not dead",
    "> 0.2% in JP, not dead",
    "not IE 11, not ios 9, not android > 4",
    "safari > 11, ios > 11"
  ],
  "dependencies": {
    "core-js": "^3.27.1",
    "gsap": "^3.11.4",
    "micromodal": "^0.4.10"
  },
  "devDependencies": {
    "@types/core-js": "^2.5.5",
    "@types/jest": "^29.2.5",
    "@types/micromodal": "^0.3.3",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.11",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.1",
    "cpx": "^1.5.0",
    "css-mqpacker": "^7.0.0",
    "ejs-cli": "^2.2.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^6.0.1",
    "stylelint-prettier": "^2.0.0",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
